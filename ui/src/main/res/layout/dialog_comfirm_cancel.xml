<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mlDelete"
    android:layout_width="456pt"
    android:layout_height="282pt"
    android:background="@mipmap/bg_pop"
    app:layoutDescription="@xml/dialog_comfirm_cancel_scene">

    <ImageView
        android:id="@+id/ivAppIcon"
        android:layout_width="60pt"
        android:layout_height="60pt"
        android:layout_marginTop="40pt"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAppDeleteTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:paddingLeft="38pt"
        android:paddingRight="38pt"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAppIcon" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="48pt" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="48pt" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="228pt" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="0pt"
        android:layout_height="62pt"
        android:layout_marginBottom="41pt"
        android:background="@drawable/shape_cancel_half_bg"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="22pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="0pt"
        android:layout_height="62pt"
        android:layout_marginBottom="41pt"
        android:background="@drawable/shape_confirm_half_bg"
        android:gravity="center"
        android:text="Ensure"
        android:textColor="@color/white"
        android:textSize="22pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guideline5"
        app:layout_constraintStart_toEndOf="@+id/guideline6" />


</androidx.constraintlayout.motion.widget.MotionLayout>